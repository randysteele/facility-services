<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @clients.each do |client| %>
        <tr>
            <td><%= link_to client.name, client_path(client) %></td>
            <td><%= link_to client.address, client_path(client) %></td>
            <td><%= link_to client.city, client_path(client)%></td>
            <td><%= link_to client.state, client_path(client) %></td>
            <td><%= link_to client.zip, client_path(client) %></td>
            <td><%= link_to 'Show', client %></td>
            <td><%= link_to 'Edit', edit_client_path(client) %></td>
            <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

