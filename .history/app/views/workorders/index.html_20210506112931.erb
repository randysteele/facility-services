<p id="notice"><%= notice %></p>

<h1>Workorders for <%=@client.name%></h1>

<table>
    <thead>
        <tr>
            <th>Body</th>
            <th>Caller</th>
            <th>Technician</th>
            <th>Target date</th>
            <th>Resolution</th>
            <th>Client</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @workorders.each do |workorder| %>
        <tr>
            <td><%= workorder.body %></td>
            <td><%= workorder.caller %></td>
            <td><%= workorder.technician %></td>
            <td><%= workorder.target_date %></td>
            <td><%= workorder.resolution %></td>
            <td><%= workorder.client_id %></td>
            <td><%= workorder.client.name %></td>
            <td><%= link_to 'Show Workorder', [@client] %></td>
            <td><%= link_to 'Edit Workorder', edit_client_workorder_path(@client, workorder) %></td>
            <td><%= link_to 'Destroy Workorder', [@client, workorder], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Workorder', new_client_workorder_path(@client) %>